<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cvDiseaseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cs_light_danger"
    app:contentPaddingTop="12dp"
    app:contentPaddingBottom="12dp"
    app:contentPaddingLeft="32dp"
    app:contentPaddingRight="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plantname"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:textColor="@color/cs_gray"
                android:id="@+id/txtPlantName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_semibold"
                android:textSize="24sp"
                android:text="DisseaseName"
                android:textColor="@color/cs_danger"
                android:id="@+id/txtDiseaseName"
                android:layout_marginBottom="8dp"/>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textSize="28sp"
                android:text="100%"
                android:textColor="@color/cs_danger"
                android:layout_centerInParent="true"
                android:id="@+id/txtPercent" />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
