<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.Map.MapActivity"
    android:fitsSystemWindows="true">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/slidingUpPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="0dp"
        app:umanoScrollableView="@id/collapsing_toolbar"
        app:umanoOverlay="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.esri.arcgisruntime.mapping.view.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mapHome"
                />

            <LinearLayout
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_search"
                android:orientation="horizontal"
                android:gravity="center"
                android:elevation="10dp">
                <ImageView
                    android:tag="location"
                    android:id="@+id/iconsearch"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>
                <SearchView
                    android:layout_gravity="center"
                    android:id="@+id/searchView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:searchIcon="@null"
                    android:queryHint="Tìm kiếm ở đây"
                    android:iconifiedByDefault="false"
                    android:closeIcon="@null"
                    android:queryBackground="@null"/>

                <ImageView
                    android:tag="location"
                    android:layout_weight="0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_mic_24"/>
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:backgroundTint="#07810C">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/typeMap"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editSearch"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/circle">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_layers_24"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/showTypeMap"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/typeMap"
                android:elevation="15dp"
                android:background="@drawable/shadow_linearlayout"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/btnChangeGoogleMap"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/google_map"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_bottom_left="5dp"
                                app:riv_corner_radius_top_left="5dp"
                                app:riv_corner_radius_bottom_right="5dp"
                                app:riv_corner_radius_top_right="5dp"/>
                            <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Google Map"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/btnChangeMapGis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/gis_map"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_bottom_left="5dp"
                                app:riv_corner_radius_top_left="5dp"
                                app:riv_corner_radius_bottom_right="5dp"
                                app:riv_corner_radius_top_right="5dp"/>
                            <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gis Map"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/btnMapTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/temperature_new"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_bottom_left="5dp"
                            app:riv_corner_radius_top_left="5dp"
                            app:riv_corner_radius_bottom_right="5dp"
                            app:riv_corner_radius_top_right="5dp"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bản đồ nhiệt"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnMapCloud"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/clouds_new"
                            app:riv_corner_radius_bottom_left="5dp"
                            app:riv_corner_radius_bottom_right="5dp"
                            app:riv_corner_radius_top_left="5dp"
                            app:riv_corner_radius_top_right="5dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bản đồ mây"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnMapRain"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/precipitation_new"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_bottom_left="5dp"
                            app:riv_corner_radius_top_left="5dp"
                            app:riv_corner_radius_bottom_right="5dp"
                            app:riv_corner_radius_top_right="5dp"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bản đồ lượng mưa"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_above="@+id/viewBottom"
                android:id="@+id/location"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/circle"
                android:layout_marginBottom="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_gps_fixed_24"/>
            </LinearLayout>
            <View
                android:id="@+id/viewBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />
        </RelativeLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/viewInforTouchLocation"
            android:clickable="true"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:contentScrim="@color/white"
                    app:expandedTitleMarginEnd="64dp"
                    app:expandedTitleMarginStart="48dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                    <FrameLayout
                        android:id="@+id/frameInforTouchLocation"
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:layout_collapseMode="pin"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollviewSliding"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="bottom"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rltDataCharBottm"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieLoading"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_rawRes="@raw/loading_animation"/>
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/detail_weather_5_day_location" />
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>